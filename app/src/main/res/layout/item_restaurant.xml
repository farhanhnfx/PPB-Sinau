<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="32dp">

    <ImageView
        android:id="@+id/ic_resto"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:background="@drawable/baseline_food_bank_24"
        android:layout_alignParentStart="true"
        />
    <TextView
        android:id="@+id/txt_resto_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@id/ic_resto"
        android:textSize="24sp"
        android:text="Restaurant Name"
        android:layout_alignTop="@id/ic_resto"
        android:layout_marginStart="24dp"
        android:fontFamily="@font/poppins_medium"
        />
    <TextView
        android:id="@+id/txt_resto_type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:layout_alignStart="@id/txt_resto_name"
        android:layout_below="@id/txt_resto_name"
        android:text="Restaurant Type"
        android:fontFamily="@font/poppins_regular"
        android:layout_marginBottom="12dp"
        />

</RelativeLayout>