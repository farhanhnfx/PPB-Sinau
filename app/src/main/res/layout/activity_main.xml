<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:padding="15dp"
    android:background="@color/white"
    android:orientation="vertical">

    <TextView
        android:id="@+id/txt_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:text="My Phone"
        android:textSize="30sp"
        android:textStyle="bold"
        />
    <ImageView
        android:id="@+id/img_phone"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_below="@id/txt_title"
        android:src="@drawable/samsung"
        android:layout_marginTop="16dp"
        />
    <TextView
        android:id="@+id/phone_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/img_phone"
        android:text="@string/phone_name"
        android:textSize="24sp"
        android:textStyle="bold"
        android:layout_marginTop="8dp"
        />
    <TextView
        android:id="@+id/phone_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/img_phone"
        android:text="$599.99"
        android:textStyle="bold"
        android:textSize="24sp"
        android:layout_marginTop="8dp"
        android:layout_alignParentEnd="true"
        />
    <TextView
        android:id="@+id/phone_desc"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/phone_desc"
        android:layout_below="@id/phone_name"
        android:textSize="20sp"
        android:layout_marginTop="8dp"
        />
    <ImageView
        android:id="@+id/ic_memory"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/baseline_smartphone_24"
        android:layout_below="@id/phone_desc"
        android:layout_marginTop="8dp"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="256 GB | 8 GB"
        android:layout_toRightOf="@id/ic_memory"
        android:layout_alignTop="@id/ic_memory"
        android:layout_alignBottom="@id/ic_memory"
        android:textSize="18sp"
        />
    <ImageView
        android:id="@+id/ic_cam"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/baseline_smartphone_24"
        android:layout_below="@id/ic_memory"
        android:layout_marginTop="8dp"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="50 MP | 4320p"
        android:layout_toRightOf="@id/ic_cam"
        android:layout_alignTop="@id/ic_cam"
        android:layout_alignBottom="@id/ic_cam"
        android:textSize="18sp"
        />
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="BOOKMARK"
        android:layout_alignParentBottom="true"
        android:paddingVertical="15dp"
        />

</RelativeLayout>