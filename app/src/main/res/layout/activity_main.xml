<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="@color/white"
    >

    <include
        android:id="@+id/top_layout"
        layout="@layout/top_layout"
        />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/top_layout"
        app:layout_constraintBottom_toBottomOf="parent"
        >
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="400dp"
            >
            <TextView
                android:id="@+id/txt_balance"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="5,600.00"
                android:textColor="#343031"
                android:textSize="48sp"
                android:fontFamily="@font/manrope_bold"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_margin="16dp"/>

            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/primary_guideline"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintGuide_percent="0.5"
                android:orientation="vertical"
                />

            <LinearLayout
                android:id="@+id/card_pay_money"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginVertical="16dp"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="8dp"
                android:background="#D7D4F3"
                android:orientation="vertical"
                android:padding="16dp"
                app:layout_constraintEnd_toStartOf="@id/primary_guideline"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/txt_balance"
                app:layout_constraintBottom_toTopOf="@id/card_pay_bill">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/manrope_bold"
                    android:text="Pay Money"
                    android:textSize="18sp"
                    android:layout_marginBottom="8dp"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/manrope_regular"
                    android:text="To wallet, bank or mobile number"
                    android:textSize="16sp" />
            </LinearLayout>
            <LinearLayout
                android:id="@+id/card_request_money"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                app:layout_constraintTop_toBottomOf="@id/txt_balance"
                app:layout_constraintStart_toStartOf="@id/primary_guideline"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="16dp"
                android:layout_marginVertical="16dp"
                android:orientation="vertical"
                android:background="#E5F0CE"
                android:padding="16dp"
                >
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Request Money"
                    android:fontFamily="@font/manrope_bold"
                    android:textSize="18sp"
                    android:layout_marginBottom="8dp"
                    />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Request money from Cowry Loans"
                    android:fontFamily="@font/manrope_regular"
                    android:textSize="16sp"
                    />
            </LinearLayout>
            <LinearLayout
                android:id="@+id/card_pay_bill"
                android:layout_width="0dp"
                android:layout_height="150dp"
                app:layout_constraintTop_toBottomOf="@id/card_pay_money"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toStartOf="@id/primary_guideline"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="8dp"
                android:layout_marginVertical="16dp"
                android:orientation="vertical"
                android:background="#F4F9F4"
                android:padding="16dp"
                >
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Pay Bill"
                    android:fontFamily="@font/manrope_bold"
                    android:textSize="18sp"
                    android:layout_marginBottom="8dp"
                    />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Zero transactions fees when you pay"
                    android:fontFamily="@font/manrope_regular"
                    android:textSize="16sp"
                    />
            </LinearLayout>
            <LinearLayout
                android:id="@+id/card_buy_airtime"
                android:layout_width="0dp"
                android:layout_height="150dp"
                app:layout_constraintTop_toBottomOf="@id/card_request_money"
                app:layout_constraintStart_toStartOf="@id/primary_guideline"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="16dp"
                android:layout_marginVertical="16dp"
                android:orientation="vertical"
                android:background="#FCEFC7"
                android:padding="16dp"
                >
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Buy Airtime"
                    android:fontFamily="@font/manrope_bold"
                    android:textSize="18sp"
                    android:layout_marginBottom="8dp"
                    />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Top-up or Send airtime across Countries"
                    android:fontFamily="@font/manrope_regular"
                    android:textSize="16sp"
                    />
            </LinearLayout>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>

    <include
        layout="@layout/bottom_layout"
        />

</androidx.constraintlayout.widget.ConstraintLayout>